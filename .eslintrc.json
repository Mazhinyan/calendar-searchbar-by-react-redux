{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        // Indent with tabs
        "indent": [
            "error",
            "tab"
        ],
        // Indent JSX with tabs
        "react/jsx-indent": [
            "error",
            "tab"
        ],
        // Indent props with tabs
        "react/jsx-indent-props": [
            "error",
            "tab"
        ], /* eslint react/prop-types: 0 */
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        // "react/prop-types": 0,
        "react/forbid-prop-types": [
            "error",
            {
                "forbid": [
                    "any",
                    "array",
                    "object"
                ]
            }
        ],
        "no-tabs": 0,
        "no-console": "off",
        "no-alert": "off",
    }
}